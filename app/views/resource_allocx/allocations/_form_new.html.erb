<% if  @erb_code %>
    <%= render inline: @erb_code %>
<% else %>
<h4><%=@title %></h4>
  <%= simple_form_for @allocation do |f| %>
    <%= f.input :description, :label => t('Description'), :input_html => {:rows => 3} %>
    <%= f.input :status_id, :label => t('Status'), :collection => Commonx::MiscDefinition.where(:for_which => 'alloc_status'), :include_blank => true %>
    <%= f.input :start_date, :label => t('Start Date'), :as => :string %>
    <%= f.input :end_date, :label => t('End Date'), :as => :string %>
    <%= f.input :detailed_resource_id, :label => t('Detailed Resource'), :collection => return_users('index', 'resource_allocx_allocations'), :include_blank => true %>
    <%= f.input :assigned_as, :label => t('Assigned As'), :collection => @positions, :include_blank => true  if @position %>
    <%= f.input :resource_id, :as => :hidden, :input_html => {:value => @resource_id} %>
    <%= f.input :resource_string, :as => :hidden, :input_html => {:value => @resource_string} %>
    
    <%= link_to t('Back'), SUBURI + "/view_handler?index=0", :class => BUTTONS_CLS['action'] %>
    <%= f.button :submit, t('Save') , :class => BUTTONS_CLS['action'] %>
  <% end %>

<% end %>

